<h1>Create New Profile</h1>
<div id="profile-button-div">
    <button id="stud-button">Student</button>
    <button id="instruct-button">Instructor</button>
    <button id="admin-button">Admin</button>
</div>
<br>

<%= form_for @profile do |f|%>
    <%= f.text_field :first_name, placeholder: "Enter First Name" %>
    <%= f.text_field :last_name, placeholder: "Enter Last Name" %>
    <%= date_field(:profile, :birthdate) %>
    <%= f.text_field :email, placeholder: "Enter Email" %>
    <%= f.text_field :profileable_type %>
      <%= fields_for :student do |s| %>
        <%= s.text_field :background, placeholder: "Enter Background" %>
      <% end %>
     <%= f.button :submit %>
<% end %>