<h1>Edit Cohort</h1>
 
<%= form_with(model: @cohort, local: true) do |form| %>
 
  <% if @cohort.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@cohort.errors.count, "error") %> prohibited
        this Cohort from being saved:
      </h2>
      <ul>
        <% @cohort.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <%= form.label :course %><br>
    <%= collection_select(:cohort, :course_id, Course.all, :id, :name) %>
    <%= form.label :start_date %><br>
    <%= form.date_field :start_date %>
    <%= form.label :end_date %><br>
    <%= form.date_field :end_date %>
    <%= form.submit %>
  </p>
 
<% end %>