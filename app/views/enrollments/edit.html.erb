<h1>Edit Enrollment</h1>

<p><strong>Name:</strong> <%= @enrollment.profile.first_name %> <%= @enrollment.profile.last_name %></p>
 
<%= form_with(model: [@enrollment.cohort, @enrollment], local: true) do |form| %>
  <% if @enrollment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@enrollment.errors.count, "error") %> prohibited
        this Enrollment from being saved:
      </h2>
      <ul>
        <% @enrollment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= collection_select(:enrollment, :cohort_id, Cohort.all, :id, :name) %>
    <%= form.submit %>
  </p>
 
<% end %>